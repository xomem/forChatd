<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Главное меню"
        Height="600" Width="1070"
        Loaded="WindowLoaded"
        Closing="WindowClosing"
        Name="MainWin" WindowStartupLocation="CenterScreen">
    <Grid>
        <Frame HorizontalAlignment="Left" Height="571" VerticalAlignment="Top" Width="1064" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

        <Rectangle Fill="#FF007ACC" HorizontalAlignment="Left" Height="30" Margin="0,541,0,0" Stroke="Black" VerticalAlignment="Top" Width="1064"/>
        <Label x:Name="Status" Content="{Binding}" HorizontalAlignment="Left" Margin="0,541,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.092,-0.025" Height="30" Width="402" Foreground="White"/>
    </Grid>
</Window>
